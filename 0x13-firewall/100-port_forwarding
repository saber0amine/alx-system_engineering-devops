#!/bin/bash

# Define the path to the ufw configuration file
UFW_CONFIG_FILE="/etc/ufw/before.rules"

# Add port forwarding rule to redirect port 8080 to port 80
echo "*nat" | sudo tee -a "$UFW_CONFIG_FILE"
echo ":PREROUTING ACCEPT [0:0]" | sudo tee -a "$UFW_CONFIG_FILE"
echo "-A PREROUTING -p tcp --dport 8080 -j REDIRECT --to-port 80" | sudo tee -a "$UFW_CONFIG_FILE"
echo "COMMIT" | sudo tee -a "$UFW_CONFIG_FILE"

# Restart ufw to apply the changes
sudo service ufw restart
